<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="350.0"
            prefHeight="600.0" prefWidth="450.0"
            style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="john.ui.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   promptText="Sir/Mdm, how may I help you?"
                   style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 13px; -fx-background-color: #ffffff; -fx-border-color: #d0d0d0; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8px 12px;"
                   prefHeight="40.0"
                   AnchorPane.bottomAnchor="8.0"
                   AnchorPane.leftAnchor="8.0"
                   AnchorPane.rightAnchor="88.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="40.0"
                prefWidth="72.0"
                style="-fx-background-color: #007acc; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: 600; -fx-background-radius: 5px; -fx-cursor: hand; -fx-padding: 8px 16px;"
                text="Send"
                AnchorPane.bottomAnchor="8.0"
                AnchorPane.rightAnchor="8.0" />
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    style="-fx-background-color: transparent; -fx-border-color: transparent;"
                    vvalue="1.0"
                    AnchorPane.topAnchor="8.0"
                    AnchorPane.bottomAnchor="56.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="8.0"
                      style="-fx-background-color: #f5f5f5; -fx-padding: 10px;" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
