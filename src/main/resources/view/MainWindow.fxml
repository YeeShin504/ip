<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="350.0"
            prefHeight="600.0" prefWidth="450.0"
            stylesheets="@../styles/styles.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="john.ui.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   promptText="Type your message here..."
                   prefHeight="40.0"
                   AnchorPane.bottomAnchor="8.0"
                   AnchorPane.leftAnchor="8.0"
                   AnchorPane.rightAnchor="88.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="40.0"
                prefWidth="72.0"
                text="Send"
                AnchorPane.bottomAnchor="8.0"
                AnchorPane.rightAnchor="8.0" />
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vvalue="1.0"
                    AnchorPane.topAnchor="8.0"
                    AnchorPane.bottomAnchor="56.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="8.0"
                      styleClass="dialog-container" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
