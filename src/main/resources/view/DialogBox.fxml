<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>

<fx:root alignment="TOP_RIGHT"
         maxWidth="1.7976931348623157E308"
         spacing="8.0"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <Label fx:id="dialog" 
           text="Label" 
           wrapText="true" 
           minHeight="-Infinity"
           maxWidth="320.0"/>
    <ImageView fx:id="displayPicture" 
               fitHeight="32.0" 
               fitWidth="32.0" 
               pickOnBounds="true" 
               preserveRatio="true"
               style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 3, 0, 0, 1);">
      <clip>
        <Circle centerX="16.0" centerY="16.0" radius="16.0" />
      </clip>
    </ImageView>
  </children>
  <padding>
    <Insets bottom="5.0" left="8.0" right="8.0" top="5.0" />
  </padding>
</fx:root>
